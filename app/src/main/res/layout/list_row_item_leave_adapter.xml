<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_list_recycler_view_border_two"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_list_recycler_view"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_leave_adapter_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textColor="@color/txt_color_black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_leave_adapter_status"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:textColor="@color/txt_color_orange"
                        android:textSize="15sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_leave_adapter_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textColor="@color/txt_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_leave_adapter_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:textColor="@color/txt_color_black"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_leave_adapter_cDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/txt_date_color_green"
                android:layout_marginEnd="2dp"
                android:text="dateTime"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
